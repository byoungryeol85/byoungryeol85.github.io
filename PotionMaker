    align-items: center;
    justify-content: center;
    cursor: pointer;
    user-select: none;
    touch-action: none;
    overflow: visible;
    transition: transform 0.08s ease, box-shadow 0.08s ease,
                background 0.15s ease, opacity 0.15s ease;
  }

  /* ë™ê·¸ë€ ë¬¼ì•½ë³‘ (ìœ ë¦¬) */
  .cell::before {
    content: "";
    position: absolute;
    width: 72%;
    height: 72%;
